{
  "name": "deny-not-updated-branch",
  "version": "1.0.0",
  "description": "GitHub action to abort job if the branch is not up to date with the target branch",
  "private": true,
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guyarb/deny-not-updated-branch.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^15.3.0",
    "@typescript-eslint/parser": "^5.30.5",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.26.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^26.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "typescript": "^4.5.5"
  },
  "bugs": {
    "url": "https://github.com/guyarb/deny-not-updated-branch/issues"
  },
  "homepage": "https://github.com/guyarb/deny-not-updated-branch#readme"
}
